contract EditColumn {
    data {
        TableName string
        Name string
        UpdatePerm string
        ReadPerm string
    }

    conditions {
        var permissions map
        permissions["update"] = $UpdatePerm
        permissions["read"] = $ReadPerm
        $Permissions = permissions
        ColumnCondition($TableName, $Name, "", JSONEncode($Permissions))
    }

    action {
        PermColumn($TableName, $Name, JSONEncode($Permissions))
    }
}