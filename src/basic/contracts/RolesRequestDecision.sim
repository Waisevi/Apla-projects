contract RolesRequestDecision {
    data {
        decision int
        notific_id int
        rid int "optional"
        member_id int "optional"
    }

    conditions {
    }
    
    action {
        if ($decision == 1){
            RolesAssign("rid,member_id", $rid, $member_id)
        }
        
        if ($notific_id > 0){
            NotificationsClose("notific_id", $notific_id)
        }
    }
}